			"</field>",
		"</record>",
		"",
		"<!-- Menu  $1 -->",
		"<menuitem id='$2_menu' parent='$4' name='$1' action='$2_actn' />"
		]
	},
	"Flectra Base": {
		"prefix": "flectra_base",
		"body": [
			"<?xml version=\"1.0\" encoding=\"utf-8\"?>",
			"<flectra>",
			"</flectra>"
		]
	},
	"Binary Field": {
		"prefix": "field-binary",
		"body": [
			"<field name='$1' filename='n$1' />",
			"<field name='n$1' invisible='True' />"
		]
	}
}
					"</div>",
				"</form>",
			"</field>",
		"</record>",
		"",
		"<!--  Lista    $1 -->",
		"<record model='ir.ui.view' id='$2_view'>",
			"<field name='name'>$2.view</field>",
			"<field name='model'>$3</field>",
			"<field name='type'>tree</field>",

{
	// Place your snippets for xml here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Header": {
		"prefix": "qw:herder",
		"body": [
			"<div class=\"text-center h1 text-dark\">",
			"\t $1",
			"</div>",
			"<div class=\"text-center h5 text-secondary\">",
			"\t $2",
			"</div>"
		]
	},
	"Field": {
		"prefix": "field",
		"body": "<field name=\"$1\" />"
	},
	"Sequence": {
		"prefix": "sequence",
		"body": [
			"<record id=\"seq_${id}\" model=\"ir.sequence\">",
				"<field name=\"name\">${name}</field>",
				"<field name=\"code\">${code}</field>",
				"<field name=\"prefix\">${prefix}</field>",
				"<field name=\"padding\">${padding}</field>",
				"<field name=\"company_id\" eval=\"False\"/>",
			"</record>",
		],
	},
	"Accion URL":{
		"prefix": "accion_url",
		"body": [
			"<!-- Accion  URL $1 -->",
			"<record model=\"ir.actions.act_url\" id=\"$2_actn\">",
				"<field name=\"name\">$3</field>",
				"<field name=\"url\">$4</field>",
				"<field name=\"target\">$5</field>",
			"</record>",
		],
	},
	"Menu": {
		"prefix": "menu",
		"body": [
			"<!-- Menu  $1 -->",
			"<menuitem id=\"$2_menu\" parent=\"$3\" name=\"$4\" action=\"$5\" />",
		],
	},
	"Accion": {
		"prefix": "accion",
		"body": [
			"<!-- Accion  $1 -->",
			"<record model=\"ir.actions.act_window\" id=\"$2_actn\">",
			"<field name=\"name\">$1</field>",
			"<field name=\"res_model\">$3</field>",
			"<field name=\"view_type\">form</field>",
			"<field name=\"view_mode\">tree,form</field>",
			"<field name=\"help\" type=\"html\">",
					"<p class=\"oe_view_nocontent_create\">",
						"Haga clic aquí para crear un nuevo registro",
					"</p>",
			"</field>",
			"</record>",
		],
	},
	"Security Group":{
		"prefix": "security",
		"body": [
			"<record id=\"$1\" model=\"res.groups\">",
				"<field name=\"name\">$2</field>",
			"</record>",
		],
	},
	"Button": {
		"prefix": "button",
		"body": [
			"<button type=\"$1\" name=\"$2\" string=\"$3\"/>"
		]
	},
	"Group": {
		"prefix": "group",
		"body": [
			"<group>",
				"<group>",
					"$1",
				"</group>",
				"<group>",
					"$2",
				"</group>",
			"</group>"
		],
	},
	"Calendar View": {
		"prefix": "calendar",
		"body": [
			"<!--  Calendario  $1 -->",
			"<record model=\"ir.ui.view\" id=\"$2_calendar\">",
				"<field name=\"name\">$3</field>",
				"<field name=\"model\">$4</field>",
				"<field name=\"type\">calendar</field>",
				"<field name=\"priority\" eval=\"16\"/>",
				"<field name=\"arch\" type=\"xml\">",
					"<calendar color=\"$5\" date_stop=\"$6\" date_start=\"$7\" string=\"$8\">",
						"<field name=\"$9\" />",
					"</calendar>",
				"</field>",
			"</record>",
		],
	},
	"Form View": {
		"prefix": "form",
		"body": [
			"<!--  Formulario  $1 -->",
			"<record model=\"ir.ui.view\" id=\"$2_edit\">",
			"<field name=\"name\">$1</field>",
			"<field name=\"model\">$3</field>",
			"<field name=\"type\">form</field>",
			"<field name=\"priority\" eval=\"16\"/>",
			"<field name=\"arch\" type=\"xml\">",
				"<form string=\"X\" version=\"7.0\">",
				"<header>",
					"",
				"</header>",
					"<sheet>",
						"<h1>",
							"<field name=\"name\" />",
						"</h1>",
						"<group>",
							"<group>",
							"</group>",
							"<group>",
							"</group>",
						"</group>",
						"<notebook>",
							"<page string=\"Productos\">",
								"<field name=\"\" >",
									"<tree string=\"X\">",
										"<field name=\"\" />",
										"<field name=\"\" />",
										"<field name=\"\" />",
									"</tree>",
								"</field>",
							"</page>",
						"</notebook>",
					"</sheet>",
					"<div class=\"oe_chatter\">",
							"<field name=\"message_follower_ids\" widget=\"mail_followers\" />",
							"<field name=\"message_ids\" widget=\"mail_thread\" />",
					"</div>",
				"</form>",
			"</field>",
		"</record>",
		],
	},
	"Tree View":{
		"prefix": "tree",
		"body": [
			"<!--  Lista  $1 -->",
			"<record model=\"ir.ui.view\" id=\"$2_view\">",
			"<field name=\"name\">$2.view</field>",
			"<field name=\"model\">$3</field>",
			"<field name=\"type\">tree</field>",
			"<field name=\"priority\" eval=\"16\"/>",
			"<field name=\"arch\" type=\"xml\">",
				"<tree string=\"X\">",
					"<field name=\"name\" />",
				"</tree>",
			"</field>",
		"</record>",
		],
	},
	"Inerited View": {
		"prefix": "inherit",
		"body": [
			"<!-- Modificaciones a la vista: $1 -->",
			"<record id=\"$2_inherit\" model=\"ir.ui.view\">",
				"<field name=\"name\">$1</field>",
				"<field name=\"model\">$3</field>",
				"<field name=\"inherit_id\" ref=\"$4\" />",
				"<field name=\"arch\" type=\"xml\">",
				"<xpath expr=\" $5 \" position=\"inside\">",
				"</xpath>",
			"</field>",
		"</record>",
		],
	},
	"Qweb Template": {
		"prefix": "qw:template",
		"body": [
			"<template id=\"$1\">",
    "<t t-call=\"web.html_container\">",
        "<t t-foreach=\"docs\" t-as=\"o\">",
            "<t t-call=\"web.external_layout\">",
                "<div class=\"page\">",
                	"$7",
                "</div>",
            "</t>",
        "</t>",
    "</t>",
"</template>",
"<report id=\"$2\" model=\"$3\" string=\"$4\"",
    "report_type=\"qweb-pdf\"",
    "name=\"$5.$1\"",
    "file=\"$6\"",
"/>",
		]
	},
	"Qweb If": {
		"prefix": "qw:if",
		"body": [
			"<t t-if=\"$1\">",
				"$2",
			"</t>"
		]
	},
	"Qweb Table": {
		"prefix": "qw:table",
		"body": [
			"<table class=\"table table-striped\">",
									"<tr>",
										"<th></th>",
									"</tr>",
									"<t t-foreach=\"$1\" t-as=\"$2\">",
										"<tr>",
											"<td>",
												"<span t-esc=\"$3\" />",
											"</td>",
										"</tr>",
									"</t>",
								"</table>"
		]
	},
	"Qweb 2 Column": {
		"prefix": "qw:2columns",
		"body": [
			"<div class=\"row\">",
				"<div class=\"col-xs-2\"> $1",
					"</div>",
						"<div class=\"col-xs-4\">",
							"<span t-esc=\"o.$2\" />",
						 "</div>",
						"<div class=\"col-xs-2\"> $3",
						"</div>",
						"<div class=\"col-xs-4\">",
						"<span t-esc=\"o.$4\" />",
						"</div>",
						"</div>",
		]
	},

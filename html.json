{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Text Area": {
		"prefix": "textarea",
		"body": [
			"<div class=\"form-group\">",
    		"<label for=\"$1\">$2</label>",
    		"<textarea class=\"form-control\" id=\"$1\" name=\"$1\"></textarea>",
  			"</div>",
		]
	},
	"Table": {
		"prefix": "table",
		"body": [
			"<table class=\"table table-striped\">",
				"<tr>",
					"<th></th>",
				"</tr>",
				"<tr>",
					"<td></td>",
				"</tr>",
			"</table>",
		]
	},
	"Nav Bar": {
		"prefix": "navbar",
		"body": [
			"<div class=\"container\">",
    			"<a class=\"navbar-brand\"></a>",
    			"<ul class=\"navbar-nav\">",
    				"<li class=\"nav-item\"><a class=\"nav-link\" href=\"\" ></a></li>",
    			"</ul>",
    		"</div>",
		]
	},
	"Check Box": {
		"prefix": "checkbox",
		"body": [
			"<div class=\"form-group\">",
			"<label for=\"$1\">$2</label> ",
			"<input type=\"checkbox\" id=\"$1\"",
			"name=\"$1\" class=\"checkbox\" />",
			"</div>",
		],
	},
	"Image Centered": {
		"prefix": "image_centered",
		"body": [
			"<img src=\"\" class=\"img d-block mx-auto\"/>"
		]
	},
	"Input + Button": {
		"prefix": "input-button",
		"body": [
			"<div className=\"input-group\">",
                "<input type=\"text\" id=\"$1\" class=\"form-control\" placeholder=\"$2\" />",
                    "<div className=\"input-group-btn\">",
                        "<button className=\"btn btn-default\" type=\"button\">",
                                "<i className=\"glyphicon glyphicon-$3\"></i>",
                            "</button>",
                        "</div>",
                    "</div>",
		],
	},
	"Form: snippet": {
		"prefix": "form",
		"body": [
			"<form action=\"{{ action('$1@$2') }}\"",
			"method=\"POST\">",
			"{{ csrf_field() }}",
				"<button type=\"submit\" class=\"btn btn-primary btn-block\">Enviar</button>",
			"</form>"
		]
	},
	"Input": {
		"prefix": "input",
		"body": [
			"<div class=\"form-group\">",
			"<label for=\"$1\">$2</label>",
			"<input type='text' id='$1' name='$1' placeholder='$2' class='form-control' />",
			"</div>",
		]
	},
	"Select": {
		"prefix": "select",
		"body": [
			"<div class='form-group'>",
    			"<label for='$1'>$2</label>",
    			"<select class='form-control' id='$1'>",
      				"<option value=''>Seleccione Uno</option>",
    			"</select>",
  			"</div>",
		]
	},
	"Option": {
		"prefix": "option",
		"body": [
			"<option value='$1'>$2</option>"
		]
	},
	"HTML": {
		"prefix": "html",
		"body": [
			"<!doctype html>",
			"<html lang='es'>",
			  "<head>",
				"<meta charset='utf-8'>",
				"<title>$1</title>",
				  "<meta name='viewport' content='width=device-width, initial-scale=1'>",
				  "<link href=\"https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css\" rel=\"stylesheet\" integrity=\"sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We\" crossorigin=\"anonymous\">",
				  "<script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js\" integrity=\"sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj\" crossorigin=\"anonymous\"></script>",
				  "<link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet'>",
			  "</head>",
			  "<body>",
			  "</body>",
			"</html>"
		]
	},
	"Head": {
		"prefix": "head",
		"body": [
			"<div class='text-center h1 text-dark'> $1 </div>",
  			"<div class='text-center h5 text-secondary'>$2</div>"
		]
	},
	"Rigel App Component": {
		"prefix": "rg-app-component",
		"body": [
			"<app-header></app-header>",
			"<router-outlet></router-outlet>",
			"<app-footer></app-footer>"
		]
	},
}